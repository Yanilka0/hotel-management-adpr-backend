{
    "openapi": "3.0.0",
    "info": {
        "title": "Grand Vista Backend API",
        "description": "API Documentation for Grand Vista Hotel Management Backend",
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8081",
            "description": "Local Development Server"
        }
    ],
    "paths": {
        "/health": {
            "get": {
                "summary": "Health Check",
                "description": "Returns the status of the backend server",
                "responses": {
                    "200": {
                        "description": "Server is running",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "Grand Vista Backend is running!"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "summary": "Register New Staff",
                "description": "Creates a new staff account and emails credentials",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/StaffUser"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Staff Login",
                "description": "Authenticate staff user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/StaffUser"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/auth/reset-password": {
            "post": {
                "summary": "Reset Password",
                "description": "Resets user password and sends email",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ResetPasswordRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password reset email sent",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/bookings": {
            "post": {
                "summary": "Create New Booking",
                "description": "Creates a new guest (or updates if exists) and a reservation",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateBookingRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Booking created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Reservation"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "get": {
                "summary": "Get All Reservations",
                "description": "Fetches all reservations with guest details",
                "responses": {
                    "200": {
                        "description": "List of reservations",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ReservationDetailsResponse"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            },
            "delete": {
                "summary": "Delete Reservation",
                "description": "Deletes a reservation by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID of the reservation to delete",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Reservation deleted successfully"
                    },
                    "400": {
                        "description": "Missing or invalid ID"
                    },
                    "404": {
                        "description": "Reservation not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "StaffUser": {
                "type": "object",
                "properties": {
                    "staffId": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "fullName": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "profileImageUrl": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "RegisterRequest": {
                "type": "object",
                "required": [
                    "email",
                    "fullName",
                    "role"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "fullName": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "ADMIN",
                            "STAFF",
                            "MANAGER"
                        ]
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "ResetPasswordRequest": {
                "type": "object",
                "required": [
                    "email"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    }
                }
            },
            "CreateBookingRequest": {
                "type": "object",
                "required": [
                    "fullName",
                    "identificationId",
                    "roomType",
                    "checkInDate",
                    "checkOutDate"
                ],
                "properties": {
                    "fullName": {
                        "type": "string"
                    },
                    "age": {
                        "type": "integer"
                    },
                    "contactNumber": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    },
                    "identificationId": {
                        "type": "string"
                    },
                    "roomType": {
                        "type": "string"
                    },
                    "people": {
                        "type": "integer"
                    },
                    "checkInDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "checkOutDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "bedType": {
                        "type": "string"
                    },
                    "breakfastIncluded": {
                        "type": "boolean"
                    }
                }
            },
            "Reservation": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "guestId": {
                        "type": "string"
                    },
                    "roomType": {
                        "type": "string"
                    },
                    "numberOfPeople": {
                        "type": "integer"
                    },
                    "checkInDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "checkOutDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "bedType": {
                        "type": "string"
                    },
                    "breakfastIncluded": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "ReservationDetailsResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "clientName": {
                        "type": "string"
                    },
                    "clientContact": {
                        "type": "string"
                    },
                    "roomType": {
                        "type": "string"
                    },
                    "stayDuration": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    }
                }
            }
        }
    }
}